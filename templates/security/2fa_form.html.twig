{% extends 'base.html.twig' %}

{% block body %}
  <div id="login">
    <div class="container">
      <div id="login-row" class="row justify-content-center align-items-center">
        <div id="login-column" class="col-md-6">
          <div id="login-box" class="col-md-12">
            <form id="login-form"
              class="form mt-5"
              action="{{ path('2fa_login_check') }}"
              method="post">
              <h3 class="text-center text-info">
                Google authenticator
              </h3>
              <div class="form-group text-center mt-3 mb-3">
                <img width="150"
                  height="150"
                  class="shadow-sm"
                  src="{{ qrCode }}" />
              </div>
              <div class="form-group text-center">
                <label for="password" class="text-info">Code google:</label><br />
                <input id="_auth_code"
                  type="text"
                  name="_auth_code"
                  autocomplete="one-time-code"
                  autofocus />
              </div>
              <div class="form-group text-center">
                <input type="submit"
                  name="submit"
                  class="btn btn-info btn-md"
                  value="Login" />
              </div>
              <div class="form-group text-center">
                <a href="{{ path('app_logout') }}">Annuler</a>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
