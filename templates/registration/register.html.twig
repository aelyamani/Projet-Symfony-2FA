{% extends 'base.html.twig' %}

{% block title %}
  Inscription
{% endblock %}

{% block body %}
  <div class="container">
    <h1>
      Inscription
    </h1>
    {{ form_start(form) }}
    {{
      form_row(
        form.username,
        {
          label: 'Login'
        }
      )
    }}
    {{
      form_row(
        form.plainPassword.first,
        {
          label: 'Mot de passe'
        }
      )
    }}
    {{
      form_row(
        form.plainPassword.second,
        {
          label: 'Répetez le mot de passe'
        }
      )
    }}

    <button class="btn btn-success" type="submit">S'inscrire</button>
    {{ form_end(form) }}
    <button type="button" class="btn mt-3">
      <a href="{{ path('app_login') }}">Je posséde un compte</a>
    </button>
  </div>
{% endblock %}
